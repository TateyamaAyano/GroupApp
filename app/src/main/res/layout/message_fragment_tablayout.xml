            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:dividerHeight="10dp"
            android:divider="#00000000">
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>


</FrameLayout>
